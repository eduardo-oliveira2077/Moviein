}

model usuarioInformacao {
  Id             Int      @id @default(autoincrement())
  Usuario        usuario  @relation(fields: [UsuarioId], references: [Id], onUpdate: Cascade)
  UsuarioId      Int      @unique
  Cpf            String
  DataNascimento DateTime
  NomeMaterno    String
  Telefone       String
  Genero         String
  Cep            String
  Pais           String
